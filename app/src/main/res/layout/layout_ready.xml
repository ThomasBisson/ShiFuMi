<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backgroundshape"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_actual_name_player"
        android:text="ready ?"
        android:textColor="#f44242"
        android:textSize="80dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_actual_manche_player"
        android:text="ready ?"
        android:textColor="#f44242"
        android:textSize="80dp"
        android:textStyle="bold"
        android:layout_below="@+id/text_actual_name_player"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_ready"
        android:text="ready ?"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f44242"
        android:textSize="80dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_empty"
        android:onClick="onClick"
        android:clickable="true"/>

</RelativeLayout>