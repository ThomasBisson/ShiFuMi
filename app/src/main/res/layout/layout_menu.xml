<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundshape"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHI-FU-MI"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:shadowColor="#f44242"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1" />

    <Button
        android:id="@+id/btn_oneplayer"

        android:text="One player"
        android:textColor="#FFFFFF"
        android:textSize="25dp"

        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171dp" />

    <Button
        android:id="@+id/btn_twoplayer"

        android:text="N players"
        android:textColor="#FFFFFF"
        android:textSize="25dp"

        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        android:layout_marginTop="35dp"
        android:layout_below="@+id/btn_oneplayer"
        android:layout_alignStart="@+id/btn_oneplayer" />

    <Button
        android:id="@+id/btn_exit"

        android:text="EXIT"
        android:textColor="#FFFFFF"
        android:textSize="25dp"

        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        android:layout_marginTop="35dp"
        android:layout_below="@+id/btn_twoplayer"
        android:layout_alignStart="@+id/btn_twoplayer" />

</RelativeLayout>